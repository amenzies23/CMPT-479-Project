{
  "name": "github-apr-bot",
  "version": "0.2.0",
  "description": "automated program repair bot for github ci failures",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "lib/server.js",
  "scripts": {
    "start": "probot run ./lib/server.js --webhook-path /webhook",
    "build": "npm run clean && tsc && npm run setup-binary",
    "build:watch": "tsc --watch",
    "clean": "rm -rf lib/",
    "setup-binary": "chmod +x ./setup-apr-binary.sh && ./setup-apr-binary.sh",
    "build:release": "./scripts/build-release.sh",
    "heroku-postbuild": "npm run build",
    "dev": "probot run ./src/server.ts --webhook-path /webhook",
    "dev:watch": "nodemon --exec \"npm run dev\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:verbose": "jest --config jest.integration.config.js --verbose",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "dependencies": {
    "probot": "^12.0.0",
    "@octokit/rest": "^19.0.0",
    "@octokit/auth-app": "^4.0.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "github",
    "automated-program-repair",
    "ci",
    "testing",
    "probot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arusinova/apr-project"
  },
  "license": "MIT"
} 